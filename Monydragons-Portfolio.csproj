<Project Sdk="Microsoft.NET.Sdk.BlazorWebAssembly">

    <PropertyGroup>
        <TargetFramework>net8.0</TargetFramework>
        <Nullable>enable</Nullable>
        <ImplicitUsings>enable</ImplicitUsings>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly" Version="7.0.1" />
        <PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly.DevServer" Version="7.0.1" PrivateAssets="all" />
    </ItemGroup>

    <ItemGroup>
      <_ContentIncludedByDefault Remove="ConsoleSignalRServer\bin\Debug\netcoreapp3.1\ConsoleSignalRServer.deps.json" />
      <_ContentIncludedByDefault Remove="ConsoleSignalRServer\bin\Debug\netcoreapp3.1\ConsoleSignalRServer.runtimeconfig.dev.json" />
      <_ContentIncludedByDefault Remove="ConsoleSignalRServer\bin\Debug\netcoreapp3.1\ConsoleSignalRServer.runtimeconfig.json" />
      <_ContentIncludedByDefault Remove="ConsoleSignalRServer\bin\Release\netcoreapp3.1\ConsoleSignalRServer.deps.json" />
      <_ContentIncludedByDefault Remove="ConsoleSignalRServer\bin\Release\netcoreapp3.1\ConsoleSignalRServer.runtimeconfig.dev.json" />
      <_ContentIncludedByDefault Remove="ConsoleSignalRServer\bin\Release\netcoreapp3.1\ConsoleSignalRServer.runtimeconfig.json" />
      <_ContentIncludedByDefault Remove="ConsoleSignalRServer\bin\Release\netcoreapp3.1\publish\ConsoleSignalRServer.deps.json" />
      <_ContentIncludedByDefault Remove="ConsoleSignalRServer\bin\Release\netcoreapp3.1\publish\ConsoleSignalRServer.runtimeconfig.json" />
      <_ContentIncludedByDefault Remove="ConsoleSignalRServer\obj\ConsoleSignalRServer.csproj.nuget.dgspec.json" />
      <_ContentIncludedByDefault Remove="ConsoleSignalRServer\obj\project.assets.json" />
      <_ContentIncludedByDefault Remove="ConsoleSignalRServer\obj\project.packagespec.json" />
    </ItemGroup>

    <ItemGroup>
      <None Include="wwwroot\web.config.xml" />
    </ItemGroup>

    <ItemGroup>
      <Folder Include="wwwroot\resume\" />
    </ItemGroup>

    <Target Name="PostPublishActions" AfterTargets="Publish">
        <!-- Move contents of wwwroot to the publish directory root -->
        <ItemGroup>
            <WwwRootFiles Include="$(PublishDir)wwwroot\**\*.*" />
        </ItemGroup>
        <Move SourceFiles="@(WwwRootFiles)" DestinationFolder="$(PublishDir)%(RecursiveDir)" />
        <!-- Remove the now empty wwwroot directory -->
        <RemoveDir Directories="$(PublishDir)wwwroot" />
    </Target>



</Project>
